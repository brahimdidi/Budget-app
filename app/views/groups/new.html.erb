<%= form_with model: @group, class: ''  do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name, class:'form-control', placeholder: 'name',:required => true ,autofocus: true, maxlength: 15 %>
    <%= form.label :icon %>
    <%= form.text_field :icon, class:'form-control', placeholder: 'icon picture link',:required => true , maxlength: 100%>
  <div class='actions'>
    <%= form.submit "Create group", class:"button-primary" %>
  </div>
<% end %>